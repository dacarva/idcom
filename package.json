{
  "name": "idcom-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@idcom/ecommerce",
    "dev:ecommerce": "npm run dev --workspace=@idcom/ecommerce",
    "dev:wallet": "npm run dev --workspace=@idcom/wallet",
    "build": "npm run build --workspace=@idcom/ecommerce",
    "build:ecommerce": "npm run build --workspace=@idcom/ecommerce",
    "build:wallet": "npm run build --workspace=@idcom/wallet",
    "build:contracts": "cd packages/contracts && forge build",
    "lint": "npm run lint --workspace=@idcom/ecommerce",
    "lint:ecommerce": "npm run lint --workspace=@idcom/ecommerce",
    "lint:wallet": "npm run lint --workspace=@idcom/wallet",
    "lint:contracts": "cd packages/contracts && npm run lint",
    "test:contracts": "cd packages/contracts && forge test",
    "install:all": "npm install"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
