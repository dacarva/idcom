{
  "name": "@idcom/contracts",
  "description": "IDCom smart contracts for refugee subsidy verification using Self Protocol",
  "version": "1.0.0",
  "devDependencies": {
    "prettier": "^3.5.3"
  },
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "build": "forge build",
    "lint": "npm run lint:sol && npm run prettier:check",
    "lint:sol": "forge fmt --check && npx solhint {script,src,test}/**/*.sol",
    "prettier:check": "prettier --check **/*.{json,md,yml} --ignore-path=.prettierignore",
    "prettier:write": "prettier --write **/*.{json,md,yml} --ignore-path=.prettierignore",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "@selfxyz/contracts": "^1.2.3",
    "@selfxyz/core": "^1.1.0-beta.7",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "solhint": "^5.1.0"
  }
}
