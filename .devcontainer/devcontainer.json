{
    "name": "IDCom Monorepo Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "bradlc.vscode-tailwindcss",
                "NomicFoundation.hardhat-solidity",
                "JuanBlanco.solidity"
            ]
        }
    },
    "forwardPorts": [
        3000,
        3001
    ],
    "portsAttributes": {
        "3000": {
            "label": "Ecommerce App",
            "onAutoForward": "notify"
        },
        "3001": {
            "label": "Wallet App",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "npm install",
    "remoteUser": "vscode"
}
